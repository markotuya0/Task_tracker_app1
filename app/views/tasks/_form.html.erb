<%= form_with(model: task, class: "needs-validation") do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task title", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter task description (optional)" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :due_date, class: "form-label" %>
      <%= form.date_field :due_date, class: "form-control", required: true %>
    </div>
    
    <div class="col-md-6 mb-3">
      <div class="form-check mt-4">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Cancel", tasks_path, class: "btn btn-outline-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
