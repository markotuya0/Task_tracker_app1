<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Completed Tasks</h1>
  <%= link_to tasks_path, class: "btn btn-outline-primary" do %>
    <i class="fas fa-arrow-left"></i> Back to Tasks
  <% end %>
</div>

<% if @setup_mode %>
  <div class="alert alert-warning">
    <h4>Setup Mode</h4>
    <p>The application is currently in setup mode. Please complete the following steps:</p>
    <ol>
      <li>Run <code>rbenv exec bundle exec rails generate devise:install</code></li>
      <li>Run <code>rbenv exec bundle exec rails db:migrate</code></li>
      <li>Restart your Rails server</li>
    </ol>
  </div>
<% else %>
  <% if @tasks.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
      <h3>No completed tasks</h3>
      <p class="text-muted">Complete some tasks to see them here</p>
      <%= link_to "View Tasks", tasks_path, class: "btn btn-primary mt-2" %>
    </div>
  <% else %>
    <div class="row">
      <% @tasks.each do |task| %>
        <div class="col-md-6 col-lg-4">
          <%= render task %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>